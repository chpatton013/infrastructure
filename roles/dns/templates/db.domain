$TTL {{ ttl }}

; SOA Record
@ IN SOA {{ soa_subdomain }}.{{ domain }}. admin.{{ domain }}. (
  {{ serial }} ; Serial
  {{ refresh }} ; Refresh
  {{ retry }} ; Retry
  {{ expire }} ; Expire
  {{ ttl }} ; Negative Cache TTL
);

; Nameservers
{% for fqdn in (nameserver_fqdns | from_yaml) %}
  IN NS {{ fqdn }}.
{% endfor %}

; A Records
{% for record in (a_records | from_yaml) %}
  {{ record["hostname"] }}. IN A {{ record["static_ip"] }}
{% endfor %}
